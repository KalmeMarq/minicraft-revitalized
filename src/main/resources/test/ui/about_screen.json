{
  "namespace": "about",

  "title_bg": {
    "type": "image",
    "texture": "textures/ui#frame.png",
    "size": ["100% + 16px", 16],
    "anchor_from": "center",
    "anchor_to": "center",
    "nineslice_size": 8
  },

  "message_bg": {
    "type": "image",
    "texture": "textures/ui#frame.png",
    "offset": [0, 20],
    "size": ["100%", 100],
    "nineslice_size": 8,
    "bindings": [
      {
        "binding_name": "#is_in_game",
        "binding_name_override": "#visible"
      }
    ]
  },

  "title": {
    "type": "label",
    "text": "#title",
    "offset": [0, 8],
    "anchor_from": "top_middle",
    "anchor_to": "top_middle",
    "bindings": [
      {
        "binding_name": "#title"
      }
    ],
    "controls": [
      {
        "bg@title_bg": {
          "layer": -1,
          "bindings": [
            {
              "binding_name": "#is_in_game",
              "binding_name_override": "#visible"
            }
          ]
        }
      }
    ]
  },

  "message": {
    "type": "label",
    "text": "#message_body",
    "wrap": 20,
    "offset": [4, 32],
    "color": "#color",
    "bindings": [
      {
        "binding_name": "#message_body"
      },
      {
        "binding_name": "#message_color",
        "binding_name_override": "#color"
      }
    ]
  },

  "about_screen": {
    "type": "screen",
    "button_mappings": [
      {
        "from_button_id": "button.menu_cancel",
        "to_button_id": "button.menu_exit",
        "mapping_type": "global"
      },
      {
        "from_button_id": "button.key_f8",
        "to_button_id": "button.test_color_to_red",
        "mapping_type": "global"
      },
      {
        "from_button_id": "button.key_f9",
        "to_button_id": "button.test_is_in_game_toggle",
        "mapping_type": "global"
      },
      {
        "from_button_id": "button.key_f10",
        "to_button_id": "button.test_title_update",
        "mapping_type": "global"
      }
    ],
    "controls": [
      { "message_bg@message_bg": {} },
      { "title@title": {} },
      { "message@message": {} }
    ]
  }
}
